@model IEnumerable<HRMS.Models.Guest>

@{
    ViewData["Title"] = "Customers";
}

<div class="container">
    <div class="row mb-5">
        <div class="col">
        <h4>Manage Customers</h4>
</div>
<div class="col">

    <a asp-action="Create" class="btn btn-outline-primary mx-3">
        <i class="material-icons opacity-10">add_circle_outline</i>
        Create New Customer
    </a>
    <a asp-action="CheckedInCustomers" class="btn btn-outline-primary mx-3">Checked In Customers</a>
</div>
    </div>
    <div class="row mb-5">

<table class="table data-table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NRC)
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Phone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NRC)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-primary">
                        <i class="material-icons">edit</i>
                    </a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-info">
                        <i class="material-icons">visibility</i>
                    </a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger">
                        <i class="material-icons">delete</i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
    </div>
</div>

