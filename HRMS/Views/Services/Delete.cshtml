@model HRMS.Models.Service

@{
    ViewData["Title"] = "Delete";
}

<div class="container">
    <div class="row mb-5">
        <h4>Are you sure you want to delete this service?</h4>
    </div>

    <dl class="row mb-5">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PricingType)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PricingType)
