@model HRMS.Models.RoomType
@{
    ViewData["Title"] = "Walk In";
}

<h1>Walk In</h1>
@if (TempData["error"] is not null)
{
    <span class="text-danger">@TempData["error"]</span>
}
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="WalkInFindRooms">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="mb-3">
                <label class="form-label">Room Type</label>
                <select name="roomTypeId" class="form-select" asp-items="ViewBag.RoomTypeId">                    
                </select>
            </div>

            <div class="mb-3">
                <lable class="control-lable">Checked Out Date:</lable>
                <input name="CheckedOutDate" type="date" />
                <lable class="form-label">Hour:</lable>
                <select name="CheckedOutHour" class="form-select">
                    @for (int i = 1; i <= 24; i++)
                    {
                        @if (i < 10)
                        {
                            string iString = i.ToString();
                            iString = "0" + iString;
                            <option value="@iString">@iString</option>
                        }
                        else
                        {
                            <option value="@i">@i</option>
                        }
                    }
                </select>
                <lable class="form-label">Minute:</lable>
                <select name="CheckedOutMinute" class="form-select">
                    @for (int i = 0; i <= 60; i = i + 10)
                    {
                        @if (i == 0)
                        {
                            string iString = i.ToString();
                            iString = "00";
                            <option value="@iString">@iString</option>
                        }
                        else
                        {
                            <option value="@i">@i</option>
                        }

                    }
                </select>
            </div>
            <div class="mb-3">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>    
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-outline-info">
        <i class="material-icons">keyboard_backspace</i>
        Back
    </a>
</div>

