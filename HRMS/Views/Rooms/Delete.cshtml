@model HRMS.Models.Room

@{
    ViewData["Title"] = "Delete";
}

<div class="container">
    <div class="row mb-5">
        <h3>Are you sure you want to delete this?</h3>
    </div>
    <dl class="row mb-5">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.RoomType)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RoomType.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.RoomNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RoomNumber)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.RoomStatus)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RoomStatus)
        </dd>
    </dl>
    <div class="row">
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
                <a asp-action="Index" class="btn btn-info">
                    <i class="material-icons">keyboard_backspace</i>
                    Back
                </a>
            <input type="submit" value="Delete" class="btn btn-danger" />
        </form>
    </div>
</div>
