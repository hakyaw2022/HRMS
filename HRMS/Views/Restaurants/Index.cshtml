@model IEnumerable<HRMS.Models.Restaurant>

@{
    ViewData["Title"] = "Manage Restaurant";
}

@*<h1>Restaurant</h1>*@

<div class="container">
    <div class="row">
        <div class="col"><h4>Manage Restaurant Menu Items</h4></div>
        <div class="col">
<p>

                <a asp-action="Create" class="btn btn-outline-primary">
                    <i class="material-icons opacity-10">add_circle_outline</i>
                    Add New
                </a>
   @* <a asp-action="Order">Order</a>*@
</p>
        </div>
    </div>
    <div class="row">

<table class="table data-table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>      
            <th>
                @Html.DisplayNameFor(model => model.ItemCode)
            </th>      
            <th>
                @Html.DisplayNameFor(model => model.UnitPrice)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Category)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>     
            <td>
                @Html.DisplayFor(modelItem => item.ItemCode)
            </td>     
            <td>
                @Html.DisplayFor(modelItem => item.UnitPrice)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-primary">
                                <i class="material-icons">edit</i>
                            </a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-info">
                                <i class="material-icons">visibility</i>
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger">
                                <i class="material-icons">delete</i>
                            </a>
            </td>
        </tr>
}
    </tbody>
</table>
    </div>
</div>
