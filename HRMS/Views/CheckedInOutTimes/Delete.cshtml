@model HRMS.Models.CheckedInOutTime

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Check In/Out Time</h4>
    <hr />
    <span asp-validation-for="RoomType!.Name" class="text-danger"></span>

    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.RoomType!.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.RoomType!.Name):
            @Html.DisplayFor(model => model.CheckedInTime) => @Html.DisplayFor(model => model.CheckedOutTime)
        </dd>
    </dl>
  
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> 
        <div>
            <a asp-action="Index" class="btn btn-info">
                <i class="material-icons">keyboard_backspace</i>
                Back
            </a>
        </div>
    </form>
</div>
