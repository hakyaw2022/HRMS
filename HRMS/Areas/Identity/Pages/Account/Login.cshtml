<section class="vh-100">
    <div class="container-fluid h-custom">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-md-9 col-lg-6 col-xl-5">
                <img src="~/img/oasis/pinterest_board_photo.png"
                     class="img-fluid" alt="Logo image" />
            </div>
            <div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1">
                <form id="account" method="post">
                    <h2>Log In.</h2>
                    <hr />
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    @* <div class="form-floating">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                    <label asp-for="Input.Email" class="form-label"></label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>*@
                    <div class="form-outline mb-4">
                        <label asp-for="Input.UserName" class="form-label">User name</label>
                        <input asp-for="Input.UserName" class="form-control form-control-lg"
                               autocomplete="username" aria-required="true" placeholder="" />
                        <span asp-validation-for="Input.UserName" class="text-danger"></span>
                    </div>
                    <div class="form-outline mb-3">
                        <label asp-for="Input.Password" class="form-label">Password</label>
                        <input asp-for="Input.Password" class="form-control form-control-lg" autocomplete="current-password" aria-required="true" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="form-check mb-0">
                            <label asp-for="Input.RememberMe" class="form-label">
                                <input class="form-check-input" asp-for="Input.RememberMe" />
                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                            </label>
                        </div>
@*                        <div class="form-label">
                            <a id="forgot-password" asp-page="./ForgotPassword">Forgot password? </a>
                        </div>
*@                    </div>
                    <div class="text-center text-lg-start mt-4 pt-2">
                        <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary"
                                style="padding-left: 2.5rem; padding-right: 2.5rem;">
                            Log in
                        </button>
                       @* <p class="small fw-bold mt-2 pt-1 mb-0">
                            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="link-danger">Register</a>
                        </p>*@
                    </div>

                </form>

            </div>
        </div>
    </div>
</section>

